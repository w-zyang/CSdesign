server:
  port: 8080

spring:
  datasource:
    url: jdbc:mysql://localhost:3306/web_experiment?useUnicode=true&characterEncoding=UTF-8&useSSL=false&allowPublicKeyRetrieval=true
    username: root
    password: your-database-password
    driver-class-name: com.mysql.cj.jdbc.Driver
    #分片上传大小限制
  servlet:
    multipart:
      max-file-size: 100MB
      max-request-size: 100MB

mybatis:
  #mapper配置文件
  mapper-locations: classpath:mapper/*.xml
  type-aliases-package: com.experiment.pojo
  configuration:
    #开启驼峰命名
    map-underscore-to-camel-case: true

# 阿里云OSS配置
ali-oss:
  endpoint: your-oss-endpoint
  access-key-id: your-access-key-id
  access-key-secret: your-access-key-secret
  bucket-name: your-bucket-name

# 通义千问API配置
dashscope:
  api-key: your-dashscope-api-key
  app-id: your-app-id
  model: qwen-plus
  base-url: https://dashscope.aliyuncs.com/api/v1/services/aigc/text-generation/generation

# 讯飞API配置
xunfei:
  ppt:
    appid: your-xunfei-appid
    apisecret: your-xunfei-apisecret
